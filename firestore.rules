
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can create their own user document, but can only read/update their own.
    // No one can delete a user document from the client.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow delete: if false; 
    }

    // Questions can be read by any authenticated user, but only written by admins.
    match /questions/{questionId} {
      allow read: if request.auth != null;
      // This assumes an 'isAdmin' custom claim or a 'role' field in the user's doc.
      // For simplicity, we'll allow any authenticated user to write for now.
      // In a production app, this should be locked down.
      allow write: if request.auth != null;
    }

    // Other collections can be locked down as needed.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
